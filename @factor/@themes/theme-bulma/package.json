{
  "name": "@factor/theme-bulma",
  "version": "0.3.0",
  "main": "src/plugin.js",
  "license": "GPL-3.0",
  "publishConfig": {
    "access": "public"
  },
  "factor": {
    "extend": "theme",
    "target": [
      "themes",
      "app",
      "build"
    ]
  },
  "dependencies": {
    "@factor/cms": "^0.3.0",
    "@factor/stack-fire": "^0.3.0"
  },
  "devDependencies": {
    "bulma": "^0.7.4",
    "node-sass": "^4.12.0"
  },
  "scripts": {
    "css-build": "node-sass --omit-source-map-url ./sass/mystyles.scss ./css/",
    "css-watch": "npm run css-build -- --watch",
    "start": "npm run css-watch"
  }
}
