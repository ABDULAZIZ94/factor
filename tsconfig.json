{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "esnext",
    "module": "commonjs",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "sourceMap": true,
    "skipLibCheck": true,
    "paths": {
      "__CWD__/*": ["test/modules/alias/*"],
      "__SRC__/*": ["test/modules/alias/*"],
      "__FALLBACK__/*": ["test/modules/alias/*"]
    }
    //"typeRoots": ["**/types", "**/@types"]
  },

  "exclude": [
    "**/dist",
    "reports",
    "coverage",
    "**/prism.js",
    "**/iconfont.js",
    "**/.ref",
    "node_modules"
  ]
}
