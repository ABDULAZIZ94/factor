{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "esnext",
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "__CWD__/*": ["test/modules/alias/*"],
      "__SRC__/*": ["test/modules/alias/*"],
      "__FALLBACK__/*": ["test/modules/alias/*"]
    }
  },

  "exclude": [
    "**/dist",
    "reports",
    "coverage",
    "**/prism.js",
    "**/iconfont.js",
    "**/.ref",
    "**/*.vue",
    "node_modules"
  ]
}
